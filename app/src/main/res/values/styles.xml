<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- THEME TUUDI. -->
    <style name="AppThemeTuudi" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorTuudi</item>
        <item name="colorPrimaryDark">@color/colorTuudi</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <!--NAVIGATION BAR BOTTOM FONT SIZE-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
    </style>
</resources>
